<!DOCTYPE html>
<html>
<head>
  <title>JobBoard</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_company %>
<p> Logged as <%= current_company.name %></p>
<% else %>
<p> <%= link_to "New Company", new_company_path %> | <%= link_to "Login", companies_login_path %>
<% end %>
<hr />
<%= yield %>

</body>
</html>
